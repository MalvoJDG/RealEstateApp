@model List<RealEstateApp.Core.Application.ViewModels.Agentes.AgenteViewModel>;

@{
    ViewData["Title"] = "Listado de Agentes";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Listado de agentes</h1>
    </div>
</section>

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <form asp-controller="HomeCliente" asp-action="Agentes" method="get">
                <input type="text" name="filterName" class="form-control" placeholder="Buscar por nombre" />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var agente in Model)
        {
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("PropiedadesPorAgente", "HomeCliente", new { agenteId = agente.Id })" class="text-decoration-none">
                    <div class="card agent-card">
                        <img src="@agente.Foto" class="card-img-top" alt="@agente.FirstName">
                        <div class="card-body text-center">
                            <h5 class="card-title">@agente.FirstName @agente.LastName</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .agent-card img {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
        margin: 20px auto;
    }
    .agent-card {
        text-align: center;
        margin: 20px 0;
    }
</style>
